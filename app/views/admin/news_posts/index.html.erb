<header>
  <h1>News Posts</h1>
  <%= link_to "New Post", new_admin_news_post_path, class: "new" %>
</header>

<table id="artists" class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Publish Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @news_posts.each do |news_post| %>
    <tr>
      <td><%= news_post.title %></td>
      <td><%=table_text(news_post.text)%></td>
      <td><%= news_post.publish_date %></td>
      <td> <%= link_to "Edit", edit_admin_news_post_path(news_post), class: "edit"%>
      <%= link_to "Delete", admin_news_post_path(news_post), method: :delete,
      data: { confirm: "Are you sure you want to delete this New Post: #{news_post.title}?" },
      class: "delete"  %></td>
    </tr>
  <% end %>
  </tbody>
<table>
