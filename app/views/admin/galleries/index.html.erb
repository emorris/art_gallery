<header>
  <h1>Galleries</h1>
  <%= link_to "New Gallery", new_admin_gallery_path, class: "new" %>
</header>

<table id="galleries" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Text</th>
      <th>Shows</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%=table_text(gallery.text.html_safe)%></td>
      <td><%= link_to "Shows", admin_gallery_shows_path(gallery), class: "add"%></td>
      <td> <%= link_to "Edit", edit_admin_gallery_path(gallery), class: "edit"%>
      <%= link_to "Delete", admin_gallery_path(gallery), method: :delete,
      data: { confirm: "Are you sure you want to delete this Gallery #{gallery.name}?" },
      class: "delete"  %></td>
    </tr>
  <% end %>
  </tbody>
<table>
