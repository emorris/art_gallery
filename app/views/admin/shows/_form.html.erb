<%= simple_form_for [:admin, gallery, show]  do |f| %>
  <%= f.input :visible %>
  <%= f.input :title %>
  <%= f.input :artists %>
  <%= date_selector f, :start_date  %>
  <%= date_selector f, :end_date  %>
  <%= date_time_selector f, :reception_start %>
  <%= date_time_selector f, :reception_end %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>